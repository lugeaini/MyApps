<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chenxulu.myapps">

    <!-- 网络状态 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- 系统账户 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

    <application
        android:name=".application.VideoCacheApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".startmode.StartMode1Activity"
            android:launchMode="standard"/>
        <activity
            android:name=".startmode.StartMode2Activity"
            android:launchMode="singleInstance"/>
        <activity android:name=".expand.ExpandListViewActivity"/>
        <activity android:name=".notification.NotificationActivity"/>
        <activity android:name=".http.RetrofitActivity"/>
        <activity android:name=".network.NetworkActivity"/>

        <receiver
            android:name=".network.NetworkReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>

        <activity android:name=".video.VideoCacheActivity"/>
        <activity android:name=".SetActivity"/>
        <activity android:name=".imageloader.ImageLoaderActivity"/>
        <activity android:name=".account.MyAccountActivity"/>

        <service
            android:name=".account.MyAccountService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator"/>
        </service>
        <service
            android:name=".account.MySyncService"
            android:enabled="true"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adapter"/>
        </service>

        <provider
            android:name=".account.MyAccountProvider"
            android:authorities=".account"
            android:exported="false"
            android:syncable="true"/>

        <activity android:name=".layout.LayoutActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".http.OkHttpActivity">
        </activity>
    </application>

</manifest>