<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chenxulu.myapps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.VideoCacheApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".startmode.StartMode1Activity"
            android:launchMode="standard" />
        <activity
            android:name=".startmode.StartMode2Activity"
            android:launchMode="singleInstance" />
        <activity android:name=".expand.ExpandListViewActivity" />
        <activity android:name=".notification.NotificationActivity" />
        <activity android:name=".http.RetrofitActivity" />
        <activity android:name=".network.NetworkActivity" />

        <receiver
            android:name=".network.NetworkReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity android:name=".video.VideoCacheActivity" />
        <activity android:name=".SetActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".imageloader.ImageLoaderActivity"></activity>
    </application>

</manifest>